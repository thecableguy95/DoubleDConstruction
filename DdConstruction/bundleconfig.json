// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
    // Modules
    {
        "outputFileName": "wwwroot/app-modules.js",
        // An array of relative input file paths. Globbing patterns supported
        "inputFiles": [
            "wwwroot/js/modules/*.js"
        ]
    },
    {
        "outputFileName": "wwwroot/css/site.min.css",
        // An array of relative input file paths. Globbing patterns supported
        "inputFiles": [
            "wwwroot/css/site.css"
        ]
    },
    {
        "outputFileName": "wwwroot/appBase.js",
        // An array of relative input file paths. Globbing patterns supported
        "inputFiles": [
            "wwwroot/appBase/**/*.js"
        ]
    },
    {
        "outputFileName": "wwwroot/js/angular.min.js",
        // An array of relative input file paths. Globbing patterns supported
        "inputFiles": [
            "node_modules/angular/angular.min.js"
        ]
    },
    {
        "outputFileName": "wwwroot/js/angular.js",
        // An array of relative input file paths. Globbing patterns supported
        "inputFiles": [
            "node_modules/angular/angular.js"
        ]
    },
    {
        "outputFileName": "wwwroot/js/site.min.js",
        "inputFiles": [
            "wwwroot/js/site.js"
        ],
        // Optionally specify minification options
        "minify": {
            "enabled": true,
            "renameLocals": true
        },
        // Optionally generate .map file
        "sourceMap": false
    },
    {
        "outputFileName": "wwwroot/js/thirdparty/ngCart/ngCart.min.js",
        "inputFiles": [
            "wwwroot/js/thirdparty/ngCart/ngCart.js"
        ],
        // Optionally specify minification options
        "minify": {
            "enabled": true,
            "renameLocals": true
        },
        // Optionally generate .map file
        "sourceMap": false
    }
]
